NameVirtualHost *:80

<VirtualHost *:80>

    ServerName <%= @serverName %>
    DocumentRoot <%= @documentRoot %>
    ServerAdmin "jakub.jedelsky@gmail.com"

    AddHandler cgi-script .cgi .pl
    DirectoryIndex index.pl
    SuexecUserGroup cgi cgi
    <Directory <%= @documentRoot %>>
        AllowOverride None
        Options +ExecCGI
    </Directory>
</VirtualHost>
